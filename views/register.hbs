<h1 class="mb-1 restaurant-show-title">Register</h1>
<div class="container mb-5">
  <div class="row">
    <div class="col-md-6 m-auto border rounded p-3">
      <form action="/users/register" method="/post">
        <div class="form-group mt-0">
          <label for="name">Name : </label>
          <input class="mt-2 form-control" type="text" name="name" id="name" placeholder="Enter name">
        </div>
        <div class="form-group mt-0">
          <label for="email">Email : </label>
          <input class="mt-2 form-control" type="text" name="email" id="email" placeholder="Enter email">
        </div>
        <div class="form-group">
          <label for="password">Password : </label>
          <input class="mt-2 form-control" type="password" name="password" id="password" placeholder="Enter password">
        </div>
        <div class="form-group">
          <label for="confirmPassword">Confirm Password : </label>
          <input class="mt-2 form-control" type="confirmPassword" name="confirmPassword" id="confirmPassword" placeholder="Enter confirm Password">
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-warning me-1">Register</button>
          <p style="display: inline;">Have an Account ? <a href="/users/login">Login</a></p>
        </div>
      </form>
    </div>
  </div>
</div>